# .env Ejemplo

## ⚠️ IMPORTANTE: Nunca commitear este archivo. Siempre usar variables de entorno.

# ============================================
# DJANGO
# ============================================

# Generar con: python manage.py shell
# >>> from django.core.management.utils import get_random_secret_key
# >>> print(get_random_secret_key())
SECRET_KEY=tu_clave_secreta_muy_larga_aqui_minimo_50_caracteres

# Cambiar a False en producción
DEBUG=False

# Dominios permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1,tudominio.com,www.tudominio.com

# Environment
ENVIRONMENT=production

# Zona horaria
TIME_ZONE=America/Santiago

# ============================================
# BASE DE DATOS - PostgreSQL
# ============================================

DB_ENGINE=django.db.backends.postgresql

# Nombre de la base de datos
DB_NAME=vetsantasofia

# Usuario de PostgreSQL
DB_USER=vetsantasofia

# Contraseña (MIN 16 caracteres, mezclada mayus/minús/números/símbolos)
DB_PASSWORD=TuContraseña123!@#$%

# Host del servidor de BD
DB_HOST=localhost

# Puerto (por defecto 5432)
DB_PORT=5432

# ============================================
# CORREO ELECTRÓNICO
# ============================================

# Backend de email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Servidor SMTP (ej: Gmail)
EMAIL_HOST=smtp.gmail.com

# Puerto SMTP
EMAIL_PORT=587

# Email que envía
EMAIL_HOST_USER=tu_email@gmail.com

# Contraseña de app (NO la contraseña normal)
# Para Gmail: https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=tu_contraseña_app_aqui

# Usar TLS
EMAIL_USE_TLS=True

# Email de donde vienen los reportes
DEFAULT_FROM_EMAIL=noreply@vetsantasofia.com

# ============================================
# SEGURIDAD
# ============================================

# Forzar HTTPS
SECURE_SSL_REDIRECT=True

# Cookie segura (solo HTTPS)
SESSION_COOKIE_SECURE=True

# Cookie CSRF segura
CSRF_COOKIE_SECURE=True

# Headers de seguridad XSS
SECURE_BROWSER_XSS_FILTER=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================
# ALMACENAMIENTO (Opcional - AWS S3)
# ============================================

# Si usas S3 para archivos estáticos/media
USE_S3=False

# AWS Access Key
AWS_ACCESS_KEY_ID=tu_clave_aqui

# AWS Secret Key
AWS_SECRET_ACCESS_KEY=tu_secret_aqui

# Bucket S3
AWS_STORAGE_BUCKET_NAME=tu_bucket_aqui

# Región S3
AWS_S3_REGION_NAME=us-east-1

# Dominio personalizado (opcional)
AWS_S3_CUSTOM_DOMAIN=cdn.vetsantasofia.com

# ============================================
# LOGGING (Opcional)
# ============================================

# Nivel de log
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=/home/vetsantasofia/VetSantaSofia/logs/django.log

# ============================================
# API (Si usas)
# ============================================

# Clave API para servicios externos
API_KEY=tu_api_key_aqui

# Límite de rate limiting
RATE_LIMIT=1000

# ============================================
# EXTRAS
# ============================================

# Teléfono de soporte
SUPPORT_PHONE=+56976543210

# Email de soporte
SUPPORT_EMAIL=soporte@vetsantasofia.com

# URL de documentación
DOCS_URL=https://docs.vetsantasofia.com

# Versión del sistema
APP_VERSION=1.0.0
